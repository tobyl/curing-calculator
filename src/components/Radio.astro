---
import type { arrayOutputType } from 'astro/zod'

interface Props {
	name: string,
  primaryLabel: string,
  defaultValue?: string,
  choices: [string, string][],
}

const { name, primaryLabel, defaultValue, choices } = Astro.props
---

<div class="field">
  <label class="flex items-center font-semibold">{primaryLabel}</label>
  <div class="grid grid-cols-2 w-48 border border-emerald-500 rounded-md bg-white">
    {choices.map(ch =>
      <label class="flex items-center gap-2 py-3 px-3 border-r border-emerald-500 last:border-none">
        <input
          type="radio"
          name={name}
          value={ch[0]}
          checked={defaultValue === ch[0]}
          class="checked:bg-emerald-500 text-emerald-500"
        />
        <span>{ch[1]}</span>
      </label>
    )}
  </div>
</div>